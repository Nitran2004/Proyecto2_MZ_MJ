<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto2_MZ_MJ.Suite"
             Title="Suite">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label 
            x:Name="lblValor1"
            Text="Nombre:"
            FontSize="15"
            HorizontalOptions="Center" />
        <Entry 
            x:Name="entryValor1"
            Text="{Binding Valor1}"
            FontSize="15"
            HorizontalOptions="Center" />

        <Label 
            x:Name="lblValor2"
            Text="Capacidad:"
            FontSize="15"
            HorizontalOptions="Center" />
        <Entry 
            x:Name="entryValor2"
            Text="{Binding Valor2}"
            FontSize="15"
            HorizontalOptions="Center" />

        <Label 
            x:Name="lblValor3"
            Text="dd/mm/aaaa:"
            FontSize="15"
            HorizontalOptions="Center" />
        <Entry 
            x:Name="entryValor3"
            Text="{Binding Valor3}"
            FontSize="15"
            HorizontalOptions="Center" />

        <Button Text="Leer" Clicked="OnReadClicked" />
        <Button Text="Guardar" Clicked="OnSaveClicked" />
        <Button Text="Borrar" Clicked="OnDeleteClicked" />
        <Button Text="Modificar" Clicked="OnModifyClicked" />
    </StackLayout>
</ContentPage>
