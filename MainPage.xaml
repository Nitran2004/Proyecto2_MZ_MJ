<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto2_MZ_MJ.MainPage">

    <Grid>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="20">
            <Label Text="Bienvenido al Hotel Paradiso" FontSize="28" TextColor="Black" HorizontalOptions="CenterAndExpand" />
            <Label Text="Tu destino de lujo para relajación y comodidad" FontSize="16" TextColor="Gray" HorizontalOptions="CenterAndExpand" />
            <BoxView BackgroundColor="Gray" HeightRequest="1" Margin="0,10,0,10" />
            <Label Text="Explora nuestras lujosas habitaciones, disfruta de servicios de primera clase y crea recuerdos inolvidables." FontSize="18" TextColor="Black" HorizontalOptions="CenterAndExpand" />
            <Image
                Source="empresita.jpg"
                HeightRequest="200"
                HorizontalOptions="Center"/>


            <Button Text="Reservar Ahora" TextColor="White" BackgroundColor="#007bff" FontSize="20" VerticalOptions="Start" HorizontalOptions="CenterAndExpand" Clicked="ReservarButton_Clicked" />

        </StackLayout>

    </Grid>

</ContentPage>
