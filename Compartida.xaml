<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto2_MZ_MJ.Conpartida"
             Title="Compartida">
    <FlexLayout VerticalOptions="Center" HorizontalOptions="Center" Direction="Row">
        <Label 
            x:Name="lblValor1"
            Text="Nombre:"
            FontSize="15"
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding Valor1}"
            FontSize="15"
            HorizontalOptions="Center" />

        <Label 
            x:Name="lblValor2"
            Text="Capacidad:"
            FontSize="15"
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding Valor2}"
            FontSize="15"
            HorizontalOptions="Center" />

        <Label 
            x:Name="lblValor3"
            Text="dd/mm/aaaa:"
            FontSize="15"
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding Valor3}"
            FontSize="15"
            HorizontalOptions="Center" />
    </FlexLayout>
</ContentPage>